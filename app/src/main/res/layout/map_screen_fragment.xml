<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <org.osmdroid.views.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tilesource="Mapnik" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_my_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:alpha="0.6"
        android:clickable="true"
        android:contentDescription="@string/gps_my_location_button"
        android:longClickable="true"
        android:soundEffectsEnabled="true"
        android:src="@drawable/ic_baseline_my_location_24"
        app:backgroundTint="@color/white"
        app:borderWidth="20dp"
        app:elevation="20dp"
        app:fabSize="mini"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#FDD835"
        tools:ignore="ContentDescription,HardcodedText" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_my_setting_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:alpha="0.6"
        android:clickable="true"
        android:contentDescription="@string/gps_my_setting_button"
        android:longClickable="true"
        android:soundEffectsEnabled="true"
        android:src="@drawable/ic_baseline_settings_24"
        app:backgroundTint="@color/white"
        app:borderWidth="20dp"
        app:elevation="20dp"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="#FDD835"
        tools:ignore="ContentDescription,HardcodedText" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_my_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTintMode="add"
        android:clickable="true"
        android:contentDescription="@string/gps_my_location_button"
        android:longClickable="true"
        android:soundEffectsEnabled="true"
        android:src="@drawable/ic_baseline_share_location_24"
        android:tint="@color/white"
        app:backgroundTint="@color/white"
        app:borderWidth="1dp"
        app:elevation="20dp"
        app:fabSize="auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#FFB300"
        tools:ignore="ContentDescription,HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>